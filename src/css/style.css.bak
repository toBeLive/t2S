:root {
    --big-size: 900px;
    --bg-color: #4682B4;
}

body {
    min-width: var(--big-size);
}

header {
    background-color: var(--bg-color);
}

#logo>img {
    position: absolute;
    max-height: 60px;
    max-width: 290px;
    padding: 15px;
}

#top__head {
    display: flex;
    justify-content: space-between;
    min-height: 50px;
}

#language {
    display: flex;
    width: 130px;
    justify-content: space-between;
    align-items: center;
}

#flag {
    background-image: url("http://t2studio.org/wp-content/uploads/2018/09/europa-vector-flag_small-2.png");
    width: 30px;
    height: 31px;
    background-position: -73px -138px;
}

.i__block {
    display: flex;
    flex-grow: 1;
    justify-content: flex-end;
    padding-top: 10px;
}


/* меню закладок */

ul.main__menu {
    list-style: none;
    border-bottom: 1px #888899 solid;
    padding-bottom: 10px;
}

ul.main__menu li {
    display: inline;
    margin-right: 5px;
}

ul.main__menu li a {
    color: #888899;
    text-decoration: none;
    background: #f7f7f9;
    border: 1px #bbbbcc solid;
    border-bottom: none;
    padding: 10px 14px;
}

ul.main__menu li a:hover {
    padding: 14px 14px 10px 14px;
}

ul.main__menu li a.selected {
    color: #555566;
    background: #ffffff;
    border: 1px #888899 solid;
    border-bottom: 1px #ffffff solid;
    padding: 14px 14px 10px 14px;
}


/*отрисовка основных блоков сайта*/

.sections {
    /*border: 1px solid gray;*/
    margin: 5px;
}

p {
    text-indent: 15px;
}

#first_section img {
    max-width: 400px;
    float: left;
    /* Выравнивание по левому краю */
    margin: 7px 7px 7px 0;
    /* Отступы вокруг картинки */
}

#info_serv {
    max-width: 75%;
    text-align: justify;
}

#info_serv p:first-child {
    text-align: center;
    font-size: 1.2em;
    padding: 3px;
}

.d-flex {
    display: flex;
    margin: 10px;
    padding: 5px;
    justify-content: space-around;
}


/*для визуализации*/

.d-flex * {
    border: 1px dashed #87CEEB;
}


/*стилизация формы*/

.d-form {
    min-width: 250px;
    flex-direction: column;
}


/*стилизация слайдшоу*/

#slides {
    position: relative;
    height: 250px;
    width: 840px;
}

.slide {
    position: absolute;
    left: 0px;
    top: 0px;
    width: 100%;
    height: 100%;
    opacity: 0;
    z-index: 1;
    -webkit-transition: opacity 2s;
    -moz-transition: opacity 2s;
    -o-transition: opacity 2s;
    transition: opacity 2s;
}

.showing {
    opacity: 1;
    z-index: 2;
}

.slide {
    font-size: 40px;
    padding: 15px;
    box-sizing: border-box;
    color: #000;
}

.slide p {
    font-size: 20px;
    max-height: 200px;
    font-family: cursive;
}

.slide:nth-of-type(1n) img {
    max-width: 150px;
    max-height: 150px;
}


/*блок новостей*/

#news>li {
    width: 33%;
}

.news__img {
    width: 250px;
}

#news {
    justify-content: space-between;
}

#news>li {
    justify-content: space-between;
    border: 1px solid gray;
    margin: 3px;
    padding: 5px;
}

.img__float {
    float: left;
    /* Выравнивание по левому краю */
    margin: 7px 7px 7px 0;
    /* Отступы вокруг картинки */
}


/*подвал*/

#site_link {
    justify-content: space-evenly;
}

#site_link a {
    text-decoration: none;
    font-family: sans-serif;
    color: white;
    padding: 10px 20px;
    background-color: var(--bg-color);
    border-bottom: 5px solid #36638a;
}

footer p {
    padding: 20px;
    margin-top: 20px;
}